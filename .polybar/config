[colors]
background 	= #00000000
foreground 	= ${xrdb:color7}
darker		= ${xrdb:color8}
urgent		= ${xrdb:color15}
volume		= ${xrdb:color1}
charging	= ${xrdb:color6}
full 		= ${xrdb:color7}
discharging 	= ${xrdb:color7}

[bar/main_bar]
monitor = ${env:MONITOR:LVDS-1}
bottom = false
width = 100%
height = 20
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.foreground}

module-margin-left = 0
module-margin-right = 2

font-0 = dejavu-sans-mono:fontformat=truetype:size=11;1

modules-left = i3 xwindow
modules-right = cpu memory compton date battery volume powermenu

tray-position = right
tray-padding = 9
tray-transparent = false
tray-offset-y = 0%
tray-offset-x = 0%
tray-maxsize = 18
tray-detached = false

wm-restack = i3

[module/i3]
type = internal/i3

label-mode = %mode%
label-mode-padding = 2

label-focused = %index%
label-focused-underline = ${colors.foreground}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2

label-visible = %index%
label-visible-underline = ${colors.darker}
label-visible-padding = 4

label-urgent = %index%
label-urgent-underline = ${colors.urgent}
label-urgent-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:65:...%
label-padding = 2
label-foreground = ${colors.darker}
label-maxlen = 0

[module/cpu]
type = internal/cpu
interval = 0.5
label-foreground = ${colors.darker}

[module/memory]
type = internal/memory
interval = 3
label = %gb_used%
label-foreground = ${colors.darker}

[module/compton]
type = custom/script
exec = echo '#'
click-left = ~/.polybar/compton.sh

[module/date]
type = internal/date
interval = 5
date = "%d/%m/%Y"
time = %H:%M
label = %date% %time%

[module/volume]
type = internal/volume
master-soundcard = default
format-volume-underline = ${colors.volume}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100

format-charging = <label-charging>
format-charging-underline = ${colors.charging}
label-charging = %percentage%%

format-full= <label-full>
format-full-underline = ${colors.full}
label-full= %percentage%%

format-discharging = <label-discharging>
format-discharging-underline = ${colors.discharging}
label-discharging = %percentage%%

[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1

label-open = ยง
label-close = C
label-separator = |

menu-0-0 = Re
menu-0-0-exec = menu-open-1
menu-0-1 = Po
menu-0-1-exec = menu-open-2
menu-0-2 = Su
menu-0-2-exec = menu-open-3
menu-0-3 = Hi
menu-0-3-exec = menu-open-4

menu-1-0 = Reboot
menu-1-0-exec = systemctl reboot &

menu-2-0 = Power off
menu-2-0-exec = shutdown 0 &

menu-3-0 = Suspend
menu-3-0-exec = i3lock -i ~/Dotfiles/Wallpaper-lock.png && systemctl suspend &

menu-4-0 = Hibernate
menu-4-0-exec = i3lock -i ~/Dotfiles/Wallpaper-lock.png && systemctl hibernate &

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
